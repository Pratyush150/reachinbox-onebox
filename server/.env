# Server Configuration
NODE_ENV=development
PORT=5001
API_PREFIX=/api/v1

# Database
MONGODB_URI=mongodb://admin:password123@localhost:27017/reachinbox?authSource=admin
MONGODB_DB_NAME=reachinbox

# Redis
REDIS_URL=redis://localhost:6379

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-long-and-random
JWT_EXPIRE=7d

# AI Service (Get your API key from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your-gemini-api-key-here

# Test Email Accounts (Gmail App Passwords recommended)
# Account 1 - Gmail
GMAIL_USER_1=your-email-1@gmail.com
GMAIL_PASS_1=your-app-password-1
GMAIL_IMAP_HOST_1=imap.gmail.com
GMAIL_IMAP_PORT_1=993

# Account 2 - Gmail (different account)
GMAIL_USER_2=your-email-2@gmail.com
GMAIL_PASS_2=your-app-password-2
GMAIL_IMAP_HOST_2=imap.gmail.com
GMAIL_IMAP_PORT_2=993

# Account 3 - Outlook (optional)
OUTLOOK_USER=your-email@outlook.com
OUTLOOK_PASS=your-outlook-password
OUTLOOK_IMAP_HOST=outlook.office365.com
OUTLOOK_IMAP_PORT=993

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EXTERNAL_WEBHOOK_URL=https://webhook.site/your-unique-id

# Frontend URL (for links in notifications)
FRONTEND_URL=http://65.1.63.189:3000

# Security
ENCRYPT_SECRET=your-encryption-secret-for-passwords-32-chars-long

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Processing
MAX_EMAILS_PER_SYNC=1000
SYNC_INTERVAL_MINUTES=5
MAX_RECONNECT_ATTEMPTS=5

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
